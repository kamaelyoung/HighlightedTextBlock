<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:HighlightedTextBlock">

    <Style TargetType="control:HighlightedTextBlock">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="control:HighlightedTextBlock">
                    <TextBlock x:Name="PART_Content" Style="{TemplateBinding TextStyle}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>